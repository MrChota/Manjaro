<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Manjaro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#212121</item>
        <item name="colorOnPrimary">#212121</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#212121</item>
        <item name="colorSecondaryVariant">#212121</item>
        <item name="colorOnSecondary">#212121</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name='android:navigationBarColor'>?attr/colorPrimary</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
</resources>